{
  "elements": {
    "classroom_background": {
      "class": "background",
      "content": "<svg width='100%' height='100%' viewBox='0 0 1000 600' xmlns='http://www.w3.org/2000/svg'><rect width='100%' height='100%' fill='#F0F0F0'/><rect x='0' y='400' width='1000' height='200' fill='#8B4513'/><rect x='50' y='50' width='200' height='300' fill='#A0522D'/><rect x='750' y='50' width='200' height='300' fill='#A0522D'/><rect x='300' y='20' width='400' height='250' fill='#4682B4'/></svg>",
      "style": {
        "position": "absolute",
        "top": "0",
        "left": "0",
        "width": "100%",
        "height": "100%",
        "z-index": "1"
      }
    },
    "classroom": {
      "class": "classroom",
      "style": {
        "position": "absolute",
        "top": "0",
        "left": "0",
        "width": "100%",
        "height": "100%",
        "background-color": "rgba(255, 255, 255, 0.5)",
        "z-index": "2"
      }
    },
    "desk": {
      "class": "desk",
      "content": "ü™ë",
      "style": {
        "position": "absolute",
        "bottom": "20%",
        "left": "50%",
        "transform": "translateX(-50%)",
        "font-size": "100px",
        "z-index": "3"
      }
    },
    "boy": {
      "class": "character",
      "content": "üë¶",
      "style": {
        "position": "absolute",
        "bottom": "30%",
        "left": "30%",
        "font-size": "80px",
        "z-index": "10"
      }
    },
    "teacher": {
      "class": "character",
      "content": "üë©‚Äçüè´",
      "style": {
        "position": "absolute",
        "bottom": "30%",
        "right": "30%",
        "font-size": "80px",
        "z-index": "10"
      }
    },
    "stars": {
      "type": "particle",
      "options": {
        "emoji": "‚≠ê",
        "number": 20,
        "size": 20,
        "opacity": 0.7,
        "duration": 3,
        "durationVariation": 1
      }
    }
  },
  "steps": [
    {
      "type": "set",
      "target": "boy",
      "props": { "opacity": 0, "x": "-100%" }
    },
    {
      "type": "set",
      "target": "teacher",
      "props": { "opacity": 0, "x": "100%" }
    },
    {
      "type": "to",
      "target": "boy",
      "props": { "opacity": 1, "x": "0%", "duration": 1, "ease": "power2.out" }
    },
    {
      "type": "to",
      "target": "teacher",
      "props": { "opacity": 1, "x": "0%", "duration": 1, "ease": "power2.out" }
    },
    {
      "type": "dialog",
      "target": "teacher",
      "text": "Welcome to class!",
      "duration": 2
    },
    {
      "type": "dialog",
      "target": "boy",
      "text": "Hello, teacher!",
      "duration": 2
    },
    {
      "type": "function",
      "function": "zoomCamera",
      "args": ["desk", 1.5, 2]
    },
    {
      "type": "startParticles",
      "target": "stars"
    },
    {
      "type": "dialog",
      "target": "teacher",
      "text": "Let's start our lesson!",
      "duration": 2
    },
    {
      "type": "stopParticles",
      "target": "stars"
    },
    {
      "type": "function",
      "function": "resetCamera",
      "args": [1.5]
    }
  ]
}
